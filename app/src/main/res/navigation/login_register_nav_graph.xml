<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_register_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ldc.wandroid.ui.fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            android:id="@+id/action_login_2_register"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.ldc.wandroid.ui.fragments.RegisterFragment"
        android:label="RegisterFragment">
        <action
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            android:id="@+id/action_register_b2_login"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>