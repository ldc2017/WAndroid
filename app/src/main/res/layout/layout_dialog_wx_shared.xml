<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_10"
    tools:context=".activitys.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_wx_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_80"
        tools:ignore="RelativeOverlap">

        <ImageView
            android:id="@+id/icon_wx_session"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:contentDescription="@string/str_title"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_wx_session" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_wx_session"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/str_wx_time_line"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wx_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_80"
        tools:ignore="RelativeOverlap">

        <ImageView
            android:id="@+id/icon_wx_timeline"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/str_title"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_wx_time_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_wx_timeline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/str_wx_time_line"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</RelativeLayout>