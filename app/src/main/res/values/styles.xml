<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_008577</item>
    </style>


    <style name="font_button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor"><![CDATA[#FFFFFF ]]></item>
        <item name="android:textSize"><![CDATA[16sp]]></item>
    </style>

    <style name="font_tv_title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor"><![CDATA[#FFFFFF ]]></item>
        <item name="android:textSize"><![CDATA[17sp]]></item>
    </style>

    <style name="font_tv" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor"><![CDATA[#FFFFFF ]]></item>
        <item name="android:textSize"><![CDATA[17sp]]></item>
    </style>


    <!--    tablayout 主题-->
    <style name="StockTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/StockTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_ffffff</item>
        <item name="tabTextColor">@color/color_f5f5f5</item>
        <item name="android:background">@color/color_00574b</item>
        <item name="tabIndicatorColor">#F25058</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="StockTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <!--  中心搜索框  -->
    <style name="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableStart">@drawable/icon_search</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">@string/str_search</item>
    </style>
</resources>
